{
  "$schema": "../../node_modules/@tauri-apps/cli/schema.json",
  "productName": "UniMe Beta",
  "version": "0.6.3",
  "identifier": "com.impierce.unime",
  "app": {
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; style-src 'unsafe-inline' 'self'; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/assets/**/*.png",
          "$APPDATA/assets/**/*.svg"
        ]
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "UniMe - Identity Wallet",
        "width": 390,
        "height": 844
      }
    ]
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "iOS": {
      "developmentTeam": "Impierce Technologies B.V."
    },
    "resources": [
      "resources/*"
    ]
  },
  "plugins": {
    "fs": {
      "scope": [
        "$APPDATA/assets/**/*.png",
        "$APPDATA/assets/**/*.svg"
      ]
    }
  }
}
